<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/hint_background_selector"
    >
    
    
    <ImageView
        android:id="@+id/iv_hint_loper"
        android:layout_width="wrap_content"
        android:layout_height="55dp" 
        android:src="@mipmap/loading"
        android:layout_centerVertical="true"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tv_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="正在提交数据至公安系统。。。"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_hint_loper"
       android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/hint_text_blue"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
    />


</RelativeLayout>